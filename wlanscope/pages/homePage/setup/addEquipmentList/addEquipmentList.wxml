<!--pages/homePage/setup/addEquipmentList/addEquipmentList.wxml-->
<view class='container'>
<!-- 从我的网络中添加设备，传递参数获取到netId显示此模块-->
  <!-- <view class='busNetName-bg'>
    <view class='busNetName'>
      <text class='busName'>杭州全维技术有限公司</text>
      <text class='NetName'>全维8楼研发组wifi</text>
    </view>
  </view> -->
  <view class='addButton'>
    <view class='scanCode' bindtap='onCodeTap'>
      <image class='buttonImg' src='/images/code.png'></image>
      <text class='buttonText'>扫码添加</text>
    </view>
    <view class='cut'></view>
    <view class='addself' bindtap='onAddselfTap'>
      <image class='buttonImg' src='/images/addself.png'></image>
      <text class='buttonText'>手动添加</text>
    </view>
  </view>
  <text class='equInfoText'>设备类型</text>
  <view class='equInfo'>
    <view class='equInfoContent' wx:for="{{equipmentList}}" wx:for-item="item" wx:key="key">
      <view class='equSerial'>
        <image class='equSerialImg' src='/images/router.png'></image>
        <text class='equSerialText'>{{item.deviceSn}}</text>
      </view>
      <view class='equType'>
        <text class='equTypeText'>{{item.deviceType}}</text>
      </view>
      <view class='equDel' bindtap='equDel' data-deviceSn='{{item.deviceSn}}'>
        <image class='equDelImg' src='/images/close.png'></image>
      </view>
    </view>
  </view>
  <!-- 从我的网络中添加设备，传递参数获取到netId显示此按钮 -->
  <!-- <button class='confirm'>确定</button> -->
  <button class='confirm' bindtap='addOnlineNet'>添加到已有网络</button>
  <button class='confirm' bindtap='addNewNet'>添加到新网络</button>
  <text class='PS'>注：设备联网后，一般5分钟内上线</text>
</view>