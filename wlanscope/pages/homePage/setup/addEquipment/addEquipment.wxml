<view class='container'>
  <view class='addButton'>
    <view class='scanCode' bindtap='onCodeTap'>
      <image class='buttonImg' src='/images/code.png'></image>
      <text class='buttonText'>扫码添加</text>
    </view>
    <view class='cut'></view>
    <view class='addself' bindtap='onAddselfTap'>
      <image class='buttonImg' src='/images/addself.png'></image>
      <text class='buttonText'>手动添加</text>
    </view>
  </view>
  <text class='selEquText'>设备类型</text>
  <view class='selEqu'>
