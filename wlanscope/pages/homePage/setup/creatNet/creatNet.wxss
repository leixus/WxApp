/* pages/homePage/setup/creatNet/creatNet.wxss */

.container {
  display: flex;
  flex-direction: column;
}

.business {
  margin-top: 20rpx;
  background-color: white;
  height: 60rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  text-align: center;
}

.netMode {
  background-color: white;
  display: flex;
  flex-direction: column;
}

.netModeText {
  height: 80rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  margin-left: 25rpx;
  color: #a3a5a8;
}

.hr {
  height: 1px;
  width: 750rpx;
  background-color: #d9d9d9;
}

.equInfo {
  background-color: white;
  display: flex;
  flex-direction: column;
}

.selEquText {
  height: 80rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  margin-left: 25rpx;
  color: #a3a5a8;
}

.equInfoInput {
  display: flex;
  flex-direction: row;
  height: 80rpx;
  border-bottom: 1px solid #e9e9e9;
}

.equInfoInputText {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-left: -30rpx;
}

.equInfoInputText text {
  float: right;
  font-size: 28rpx;
  margin-right: 30rpx;
}

.equInfoInputContent {
  width: 550rpx;
  height: 80;
}

.equInfoInputContent input {
  margin-top: 15rpx;
}

.placeholder {
  font-size: 24rpx;
  opacity: 0.6;
  color: #a3a5a8;
}

.picker {
  font-size: 24rpx;
  line-height: 40rpx;
}

.confirm {
  margin-top: 45rpx;
  width: 680rpx;
  height: 90rpx;
  background-color: #4990e2;
  color: white;
  border-radius: 10rpx;
}

.display-flex-row {
  width: 710rpx;
  padding: 20rpx 0rpx;
  font-size: 24rpx;
  margin: auto;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  flex-wrap: wrap;
}

.catalog_item {
  width: 320rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border: 1px solid #a3a5a8;
  margin-top: 15rpx;
  border-radius: 10rpx;
  color: #a3a5a8;
}

.active {
  color: white;
  background-color: #4990e2;
  border: 1px solid #4990e2;
}
