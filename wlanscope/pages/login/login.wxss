/**index.wxss**/

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loginBgImg {
  width: 100%;
  height: 500rpx;
}

.loginContent {
  width: 100%;
  background-color: white;
  margin-top: 50rpx;
}

.loginContent text {
  font-size: 28rpx;
  width: 120rpx;
  margin-left: 60rpx;
  line-height: 75rpx;
}

.account {
  display: flex;
  flex-basis: row;
  margin-top: 20rpx;
}

.accountImg {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}

.account input {
  background-color: white;
  vertical-align: middle;
  margin-left: 20rpx;
  height: 70rpx;
}

.password {
  display: flex;
  flex-basis: row;
  margin-top: 20rpx;
}

.password input {
  background-color: white;
  vertical-align: middle;
  margin-left: 20rpx;
  height: 70rpx;
}

.identifying-code {
  display: flex;
  flex-basis: row;
  margin-top: 20rpx;
  position: relative;
}

.identifying-code input {
  background-color: white;
  vertical-align: middle;
  margin-left: 20rpx;
  height: 70rpx;
  position: relative;
}

.login {
  width: 680rpx;
  height: 90rpx;
  margin-top: 40rpx;
  background-color: #4990e2;
  color: white;
  border-radius: 10rpx;
}

.placeholder {
  font-size: 24rpx;
  opacity: 0.4;
}

.canvas-code {
  position: absolute;
  z-index: 999;
  margin-left: 550rpx;
  width: 180rpx;
  height: 70rpx;
}

.codeImg {
  width: 190rpx;
  height: 80rpx;
}

.hr {
  height: 1px;
  width: 550rpx;
  background-color: #d9d9d9;
  margin-left: 200rpx;
}

.busName {
  font-size: 24rpx;
  margin-top: 120rpx;
  color: #a3a5a8;
}
